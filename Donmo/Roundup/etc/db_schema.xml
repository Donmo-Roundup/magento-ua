<?xml version="1.0"?>

<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <!--    Donmo Table-->

    <table name="donmo_donation" resource="sales" engine="innodb" comment="Donmo Donation">
        <column xsi:type="int" name="donation_id" unsigned="true" nullable="false" identity="true"
                comment="Donation ID"/>

        <column xsi:type="decimal" name="donation_amount"  scale="2" precision="20" unsigned="false" nullable="true"
                comment="Donation Amount"/>

        <column xsi:type="varchar" name="status" nullable="true" length="32" default="PENDING" comment="Status"/>

        <column xsi:type="varchar" name="mode" nullable="false" length="32" comment="Mode"/>

        <column xsi:type="varchar" name="masked_quote_id" nullable="true" length="32"  comment="Masked Quote ID"/>

        <column xsi:type="int" name="order_id" padding="10" unsigned="true" nullable="true" identity="false"
                comment="Order Id"/>

        <column xsi:type="timestamp" name="created_at" on_update="false" nullable="true" comment="Created At"/>

        <column xsi:type="timestamp" name="updated_at" on_update="false" nullable="true" comment="Updated At"/>


        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="donation_id"/>
        </constraint>

        <constraint xsi:type="unique" referenceId="DONMO_DONATION_MASKED_QUOTE_ID">
            <column name="masked_quote_id"/>
        </constraint>

        <constraint xsi:type="foreign" referenceId="DONMO_DONATION_MASKED_QUOTE_ID_QUOTE_ID_MASK_MASKED_ID" table="donmo_donation"
                    column="masked_quote_id" referenceTable="quote_id_mask" referenceColumn="masked_id" onDelete="NO ACTION"/>

        <constraint xsi:type="foreign" referenceId="DONMO_DONATION_ORDER_ID_SALES_ORDER_ENTITY_ID" table="pennies_donation"
                    column="order_id" referenceTable="sales_order" referenceColumn="entity_id" onDelete="SET NULL"/>

    </table>

    <!--    Sales_Order Table-->

    <table name="sales_order" resource="sales" comment="Sales Flat Order">
        <column xsi:type="decimal" name="donmodonation" nullable="true" scale="2" precision="10" default="0.00"
                comment="Donmo Donation"/>
    </table>

    <!--    Quote Checkout Table-->
    <table name="quote" resource="checkout" comment="Donmo Donation">
        <column xsi:type="decimal" name="donmodonation" nullable="true" scale="2" precision="10" default="0.00"
                comment="Donmo Donation"/>
    </table>

    <!--    Sales Invoice Table-->
    <table name="sales_invoice" resource="sales" comment="Donmo Donation">
        <column xsi:type="decimal" name="donmodonation" nullable="true" scale="2" precision="10" default="0.00"
                comment="Donmo Donation"/>
    </table>

    <!--    Sales CreditMemo Table-->
    <table name="sales_creditmemo" resource="sales" comment="Donmo Donation">
        <column xsi:type="decimal" name="donmodonation" nullable="true" scale="2" precision="10" default="0.00"
                comment="Donmo Donation"/>
    </table>
</schema>
